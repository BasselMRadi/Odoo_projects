<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="store_orders_tree_view" model="ir.ui.view">
        <field name="name">Store Orders</field>
        <field name="model">technical.order</field>
        <field name="arch" type="xml">
            <tree string="Store Orders">
                <field name="sequence"/>
                <field name="request_name"/>
                <field name="requested_by_id"/>
                <field name="customer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rejection_reason"/>
            </tree>
        </field>
    </record>


    <record id="orders_form_view" model="ir.ui.view">
        <field name="name">Orders</field>
        <field name="model">technical.order</field>
        <field name="arch" type="xml">
            <form string="Orders">
                <header>
                    <button name="action_submit" status="submit_for_approved"   type="object" class="oe_highlight" string="Submit for Approval"
                            attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_approve" status="approved" groups="technical_order_module.group_technical_order_manager" type="object" class="btn-primary" string="Approve "
                            attrs="{'invisible': [('status', '!=', 'submit_for_approval')]}" />
<!--                    <button name="action_reject" type="object" class="btn-primary" string="Reject"-->
<!--                            attrs="{'invisible': [('status', '!=', 'submit_for_approval')]}" />-->

                     <button name="%(technical_order_module.view_action_reject_reason)d" type="action" string="Rejected"
                             class="btn btn-primary"
                        attrs="{'invisible': [('status', '!=', 'submit_for_approval')]}"
                        />
                    <button name="action_cancel" type="object" class="btn-primary" string="Cancel" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_reset_to_draft" type="object" class="btn-primary" string="Rest To Draft" attrs="{'invisible': [('status', '!=', 'cancelled')]}"/>
                    <button name="create_so" type="object" class="btn-primary" string="Create SO" attrs="{'invisible': [('status', '!=', 'approved')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,submit_for_approval,approved"/>
                </header>
                <sheet>

                     <div class="oe_button_box" name="button_box">

                          <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('sale_count', '=', 0)]}">
                            <field name="sale_count" widget="statinfo" string="Sale Order"/>
                        </button>


                     </div>


                    <div class="oe_title">
                        <h1>
                            <field name="sequence" readonly="1" force_save="1"/>
                        </h1>
                    </div>


                    <group>
                        <group>
                            <field name="customer_id" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}"/>
                            <field name="request_name" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}"/>
                            <field name="requested_by_id" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}"/>
                        </group>
                        <group>
                            <field name="start_date" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}"/>
                            <field name="end_date" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}"/>
                            <field name="rejection_reason" attrs="{'invisible': [('status', '!=', 'rejected')]}" readonly="1"/>
                            <field name="sale_order_ids" widget="many2many_tags" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_lines" attrs="{'readonly': [('status', 'in', ['rejected','cancelled','approved'])]}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total" readonly="0"/>
                                </tree>
                            </field>

                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_price">
                                    <field name="total_price" nolabel="0" colspan="2"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>


                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                       <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

    <record id="technical_order_action" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">technical.order</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <menuitem id="store_orders_root_menu" name="Store Orders" sequence="1" web_icon="technical_order_module,static/description/icon.png"/>
    <menuitem id="Orders_menu" name="Orders" parent="store_orders_root_menu" sequence="1"
              action="technical_order_action"/>


</odoo>